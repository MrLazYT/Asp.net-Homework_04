@page "{searchValue?}"
@model homework_04.Pages.Movies.IndexModel
@{
}

<div class="text-center">
    <h1>Фільми</h1>

    <form method="post" class="ms-2">
        <input class="form-control m-1" name="searchValue" placeholder="Введіть назву фільму..." />
        <button class="btn btn-primary m-1" asp-page-handler="Search">Пошук</button>
    </form>

    <div>
        <a class="btn btn-primary m-1" asp-page="Add">Додати Фільм</a>
    </div>

    <div class="container text-center">
        @for (int i = 0; i < Model.Movies.Count; i += 3)
        {
            <div class="row row-cols-3">
                @for (int j = 0; j < 3 && i + j < Model.Movies.Count; j++)
                {
                    <div class="col">
                        <div class="card m-1" style="width: 26rem;">
                            <img src=@Model.Movies[i + j].Poster class="card-img-top" alt="@Model.Movies[i + j].Title">

                            <div class="card-body">
                                <h5 class="card-title">@Model.Movies[i + j].Title</h5>
                                <p class="card-text">@Model.Movies[i + j].Style</p>
                                <form method="post">
                                    <a asp-page="Info" asp-route-id="@((i + j) + 1)" class="btn btn-primary">Детальніше</a>
                                    <button asp-page-handler="Delete" asp-route-id="@((i + j) + 1)" class="btn btn-danger">Видалити</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
